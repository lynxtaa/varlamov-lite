{
  "name": "varlamov-lite",
  "version": "0.1.0",
  "private": true,
  "author": "Alex Kondratyuk <lynxtaa@gmail.com>",
  "repository": "https://github.com/lynxtaa/varlamov-lite.git",
  "simple-git-hooks": {
    "pre-commit": "npx pretty-quick --staged"
  },
  "jest": {
    "resetMocks": true,
    "roots": [
      "<rootDir>/components",
      "<rootDir>/hooks",
      "<rootDir>/layouts",
      "<rootDir>/lib",
      "<rootDir>/pages",
      "<rootDir>/test"
    ],
    "setupFiles": [
      "jest-date-mock",
      "whatwg-fetch"
    ],
    "setupFilesAfterEnv": [
      "./jest/setupTests.ts"
    ]
  },
  "prettier": {
    "printWidth": 90,
    "useTabs": true,
    "semi": false,
    "singleQuote": true,
    "trailingComma": "all",
    "arrowParens": "avoid",
    "endOfLine": "lf",
    "quoteProps": "consistent"
  },
  "dependencies": {
    "autoprefixer": "10.2.5",
    "babel-eslint": "10.1.0",
    "cheerio": "1.0.0-rc.5",
    "classnames": "2.2.6",
    "date-fns": "2.16.1",
    "date-fns-tz": "1.1.3",
    "focus-visible": "5.2.0",
    "html-react-parser": "1.2.4",
    "lodash": "4.17.21",
    "next": "10.1.2",
    "next-seo": "4.23.0",
    "next-themes": "0.0.14",
    "node-fetch": "2.6.1",
    "nprogress": "0.2.0",
    "p-queue": "6.6.2",
    "postcss": "8.2.8",
    "postcss-focus-visible": "5.0.0",
    "probe-image-size": "7.0.1",
    "react": "17.0.2",
    "react-dom": "17.0.2",
    "react-feather": "2.0.9",
    "rss": "1.2.2",
    "tailwind-override": "0.0.7",
    "tailwindcss": "2.0.4"
  },
  "devDependencies": {
    "@testing-library/jest-dom": "5.11.10",
    "@testing-library/react": "11.2.5",
    "@testing-library/user-event": "13.0.15",
    "@types/classnames": "2.2.11",
    "@types/jest": "26.0.21",
    "@types/lodash": "4.14.168",
    "@types/node": "14.14.35",
    "@types/node-fetch": "2.5.8",
    "@types/nprogress": "0.2.0",
    "@types/probe-image-size": "5.0.1",
    "@types/react": "17.0.3",
    "@types/react-dom": "17.0.3",
    "@types/rss": "0.0.28",
    "@typescript-eslint/eslint-plugin": "4.19.0",
    "@typescript-eslint/parser": "4.19.0",
    "eslint": "7.22.0",
    "eslint-config-react-app": "6.0.0",
    "eslint-plugin-flowtype": "5.4.0",
    "eslint-plugin-import": "2.22.1",
    "eslint-plugin-jsx-a11y": "6.4.1",
    "eslint-plugin-react": "7.23.1",
    "eslint-plugin-react-hooks": "4.2.0",
    "is-ci-cli": "2.2.0",
    "jest": "26.6.3",
    "jest-date-mock": "1.0.8",
    "msw": "0.28.1",
    "prettier": "2.2.1",
    "pretty-quick": "3.1.0",
    "simple-git-hooks": "2.3.0",
    "typescript": "4.2.3",
    "whatwg-fetch": "3.6.2"
  },
  "scripts": {
    "dev": "next dev",
    "build": "next build",
    "start": "next start",
    "export": "next export",
    "lint": "eslint --ext .ts,.js,.tsx components hooks layouts lib pages",
    "test": "is-ci-cli \"test:coverage\" \"test:watch\"",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "check-types": "tsc"
  }
}
